﻿@model MyPortfolioProject.Models.Testimonial
@{
    ViewBag.Title = "TestimonialCreate";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Referans Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x=>x.TestimonialID)

    <label>İsim Soyisim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Resim</label>
    @Html.TextAreaFor(x => x.Image, new { @class = "form-control" })
    <br />

    <button class="btn btn-info"> Referansı Güncelle</button>
</form>