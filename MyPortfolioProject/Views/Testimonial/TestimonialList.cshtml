﻿@model List<MyPortfolioProject.Models.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h2 class="mb-4">Referans Listesi ve İşlemleri</h2>


<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>İsim Soyisim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.Image" alt="Resim" style="width: 100px; height: auto;" /></td>


            <td><a href="/Testimonial/TestimonialDelete/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Testimonial/TestimonialUpdate/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Testimonial/TestimonialCreate" class="btn btn-info">Yeni Referans Girişi</a>

