@model MyPortfolioProject.Models.Profile

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Profil Bilgileri Görüntüleme ve Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ProfileId)
    <label>Doğum Tarihi</label>
    @Html.TextBoxFor(x => x.Birthdate, "{0:yyyy-MM-dd}", new { @class = "form-control" })
    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />
    <label>GitHub</label>
    @Html.TextBoxFor(x => x.Githup, new { @class = "form-control" })
    <br />
    <label>Address</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" })
    <br />
    <label>Title</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 5, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Profil Bilgilerimi Güncelle</button>
</form>