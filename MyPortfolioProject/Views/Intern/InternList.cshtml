@model List<MyPortfolioProject.Models.Intern>
@{
    ViewBag.Title = "InternList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<h2 class="mb-4">Staj Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Intern/DeleteIntern/@item.InternId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Intern/UpdateIntern/@item.InternId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }



</table>
<a href="/Intern/CreateIntern/" class="btn btn-info">Yeni Staj Ekle</a>