@model MyPortfolioProject.Models.Intern
@{
    ViewBag.Title = "UpdateIntern";
    Layout = "~/Views/Admin/Index.cshtml";
}

<form method="post">

    @Html.HiddenFor(x=>x.InternId)

    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Alt Başlık</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />

    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = "4" })
    <br />

    <button class="btn btn-info">Staj Bilgisini Kaydet</button>

</form>
